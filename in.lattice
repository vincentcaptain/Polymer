# LAMMPS files to generate positions of wall particles
variable      x equal 60
variable      y equal 40
variable      z equal 40
# temperature t = 1
variable      t equal 1
variable      rho equal 4

units         lj
dimension     3
atom_style    atomic
# LJ pairs
pair_style    lj/cut 3
# two 3D LJ lattices at the middle of the box
lattice       fcc ${rho} spacing 1 1 1
region        simbox block 0 $x 0 $y 0 $z
create_box    1 simbox
region        void cylinder x 20 20 2 29 31
region        wall block 29 31 0 40 0 40
create_atoms  1 region wall
delete_atoms  region void
pair_coeff    * * 2.5 1 3
#velocity      final create $t 97287
mass          * 1

dump          wall all xyz 100 wall.txt
dump          walll all image 100 dump.*.jpg type type
# equilibration run

thermo          10
run	            50
